<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PeopleInputActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/People_Input_Title" />

    <Button
        android:id="@+id/EvenSplitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="29dp"
        android:onClick="openEvenSplit"
        android:text="Even Split" />

    <Button
        android:id="@+id/PhotoManualButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/EvenSplitButton"
        android:layout_alignBottom="@+id/EvenSplitButton"
        android:layout_marginLeft="29dp"
        android:layout_toRightOf="@+id/textView1"
        android:onClick="openPhotoManual"
        android:text="Photo Manual" />

</RelativeLayout>